<theme>
   <formatVersion>7</formatVersion>

	<view name="system">
		<image name="background-art" extra="true">
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<path>./_inc/systems/default/screen-default.jpg</path>
			<path>./_inc/systems/screenshots/${system.theme}-art-screen.jpg</path>
			<tile>false</tile>
			<color>ffffff</color>
			<zIndex>2</zIndex>
		</image>

		<image name="top-background" extra="true">
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 0.09375</size>
			<path>${spacerImage}</path>
			<tile>true</tile>
			<color>11111144</color>
			<zIndex>3</zIndex>
		</image>

		<text name="systemInfo">
			<fontPath>${bodyFont}</fontPath>
			<pos>0 0.013</pos>
			<fontSize>0.0375</fontSize>
			<color>FFFFFF55</color>
		</text>
	</view>

</theme>
